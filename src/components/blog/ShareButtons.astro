---
import { Icon } from "astro-icon/components"

export interface Props {
  text: string
  url: string | URL
  class?: string
}

const { text, url, class: className = "inline-flex items-center gap-2 rtl:space-x-reverse" } = Astro.props
---

<div class={className}>
  <!-- X -->
  <button
    aria-label="Share on X"
    title="Share on X"
    data-aw-social-share="twitter"
    data-aw-url={url}
    data-aw-text={text}
    class="group p-2 text-secondary/50 cursor-pointer rounded-full transition-colors duration-200
           hover:text-[#000] hover:bg-[#000]/10
           focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#000]/50"
  >
    <Icon
      name="tabler:brand-x"
      class="w-5 h-5"
    />
  </button>

  <!-- Facebook -->
  <button
    aria-label="Share on Facebook"
    title="Share on Facebook"
    data-aw-social-share="facebook"
    data-aw-url={url}
    class="group p-2 text-secondary/50 cursor-pointer rounded-full transition-colors duration-200
           hover:text-[#1877F2] hover:bg-[#1877F2]/10
           focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#1877F2]/50"
  >
    <Icon
      name="tabler:brand-facebook"
      class="w-5 h-5"
    />
  </button>

  <!-- LinkedIn -->
  <button
    aria-label="Share on LinkedIn"
    title="Share on LinkedIn"
    data-aw-social-share="linkedin"
    data-aw-url={url}
    data-aw-text={text}
    class="group p-2 text-secondary/50 cursor-pointer rounded-full transition-colors duration-200
           hover:text-[#0A66C2] hover:bg-[#0A66C2]/10
           focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#0A66C2]/50"
  >
    <Icon
      name="tabler:brand-linkedin"
      class="w-5 h-5"
    />
  </button>

  <!-- WhatsApp -->
  <button
    aria-label="Share on WhatsApp"
    title="Share on WhatsApp"
    data-aw-social-share="whatsapp"
    data-aw-url={url}
    data-aw-text={text}
    class="group p-2 text-secondary/50 cursor-pointer rounded-full transition-colors duration-200
           hover:text-[#25D366] hover:bg-[#25D366]/10
           focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#25D366]/50"
  >
    <Icon
      name="tabler:brand-whatsapp"
      class="w-5 h-5"
    />
  </button>

  <!-- Email -->
  <button
    aria-label="Share via e-mail"
    title="Share via e-mail"
    data-aw-social-share="mail"
    data-aw-url={url}
    data-aw-text={text}
    class="group p-2 text-secondary/50 cursor-pointer rounded-full transition-colors duration-200
           hover:text-gray-400 hover:bg-gray-600/10
           focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gray-600/50"
  >
    <Icon
      name="tabler:mail"
      class="w-5 h-5"
    />
  </button>
</div>
