---
import SocialsGithub from "~/assets/icons/socials/github.svg"
import SocialsX from "~/assets/icons/socials/x.svg"
import SocialsDiscord from "~/assets/icons/socials/discord.svg"
import SocialsTelegram from "~/assets/icons/socials/telegram.svg"
import LogoVerdeFull from "~/assets/brand/logo-full-verde.svg"

const footer = {
  links: [
    {
      title: "Contact Us",
      url: "https://bento.me/gluex-protocol",
      target: "_blank",
    },
    {
      title: "Home",
      url: "https://gluex.xyz",
      target: "_blank",
    },
  ],
}
---

<section class="bg-black pt-4">
  <div class="mx-auto max-w-7xl">
    <div class="mx-auto px-2.5 sm:px-10">
      <footer class="flex flex-col items-center justify-between gap-4 py-2 md:flex-row">
        <ul class="flex max-w-max items-center gap-5 text-sm md:gap-4">
          {
            footer.links.map((item) => (
              <li class="whitespace-nowrap text-white/50 transition-all hover:text-white">
                <a
                  eslint-disable-next-line
                  href={item.url}
                  target={item.target}
                  rel="noopener noreferrer nofollow"
                >
                  {item.title}
                </a>
              </li>
            ))
          }
        </ul>

        <ul class="flex flex-row gap-4 sm:gap-2.5">
          <li class="invert transition-all hover:opacity-100">
            <a
              href="https://github.com/gluexprotocol"
              rel="noopener noreferrer nofollow"
              target="_blank"
            >
              <img
                src={SocialsGithub.src}
                alt="GitHub"
                class="h-5 w-5 opacity-50 transition-opacity duration-300 hover:opacity-100"
              />
            </a>
          </li>
          <li class="invert transition-all hover:opacity-100">
            <a
              href="https://x.com/GluexProtocol"
              rel="noopener noreferrer nofollow"
              target="_blank"
            >
              <img
                src={SocialsX.src}
                alt="X"
                class="h-5 w-5 opacity-50 transition-opacity duration-300 hover:opacity-100"
              />
            </a>
          </li>
          <li class="invert transition-all hover:opacity-100">
            <a
              href="https://discord.com/invite/gluex"
              rel="noopener noreferrer nofollow"
              target="_blank"
            >
              <img
                src={SocialsDiscord.src}
                alt="Discord"
                class="h-5 w-5 opacity-50 transition-opacity duration-300 hover:opacity-100"
              />
            </a>
          </li>
          <li class="invert transition-all hover:opacity-100">
            <a
              href="https://t.me/+6NrwSlEPAsA3MzE0"
              rel="noopener noreferrer nofollow"
              target="_blank"
            >
              <img
                src={SocialsTelegram.src}
                alt="Telegram"
                class="h-5 w-5 opacity-50 transition-opacity duration-300 hover:opacity-100"
              />
            </a>
          </li>
        </ul>
      </footer>

      <div class="relative mt-2.5 flex bg-cover pt-10 pb-12 sm:mt-6">
        <img
          src={LogoVerdeFull.src}
          alt="GlueX Logo"
          class="w-full opacity-75"
        />
        <div
          class="pointer-events-none absolute inset-0 bg-gradient-to-b from-black via-black/75 to-transparent"
          style={{
            zIndex: 1,
          }}
        >
        </div>
      </div>
    </div>
  </div>
</section>
